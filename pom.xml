<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>dgusev</groupId>
    <artifactId>research</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>
    <name>Research :: Java/Python/Shell research/survey, self-education application.</name>

    <properties>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <java.sources.encoding>UTF-8</java.sources.encoding>
        <java.version>1.8</java.version>
        <maven.compiler.plugin>2.3.2</maven.compiler.plugin>
        <maven.jar.plugin>2.4</maven.jar.plugin>
        <maven.resources.plugin>2.5</maven.resources.plugin>
		<!-- Apache Commons libraries (Lang3/Logging/IO/Log4J) -->
        <commons.lang3.version>3.4</commons.lang3.version>
        <commons.logging.version>1.1.3</commons.logging.version>
        <commons.io.version>2.5</commons.io.version>
        <log4j.version>1.2.16</log4j.version>
		<!-- Test frameworks versions (JUnit/Mockito) -->
		<junit.version>4.12</junit.version>
        <mockito.version>1.10.19</mockito.version>
		<!-- Javax Mail version -->
		<java.mail.version>1.4.5</java.mail.version>
		<!-- Spring framework [context] module version -->
		<spring.context.version>4.3.3.RELEASE</spring.context.version>
        <apache.httpclient.version>4.5.2</apache.httpclient.version>

        <!-- skip tests coverage statistics collect (-DskipCoverageReport=true) -->
        <skipCoverageReport>false</skipCoverageReport>

        <failsafe.plugin.version>2.19.1</failsafe.plugin.version>
        <jacoco.plugin.version>0.7.7.201606060606</jacoco.plugin.version>
    </properties>

    <build>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>${java.sources.encoding}</encoding>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven.resources.plugin}</version>
                <configuration>
                    <encoding>${java.sources.encoding}</encoding>
                </configuration>
            </plugin>

            <!---->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>report</goal>
                            <goal>prepare-agent</goal>
                        </goals>
                        <configuration>
                            <skip>${skipCoverageReport}</skip>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <includes>
                        <!--<include>com/msd/gin/bdp/**/*</include>-->
                        <include>**/*</include>
                        <!--<include>gusev/dmitry/**/*</include>-->
                    </includes>
                </configuration>
                <version>${jacoco.plugin.version}</version>
            </plugin>

        </plugins>
    </build>

    <!-- jacoco reporting tool -->
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>report</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>

    <dependencies>

        <!-- Common test dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>${mockito.version}</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <profiles>

        <!-- Development profile, active by default. -->
        <profile>
            <id>env-dev-all</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <env>dev</env>
                <prod.build.phase>none</prod.build.phase>
            </properties>
            <!-- All modules to build -->
            <modules>
                <module>storm</module>
                <module>marklogic</module>
                <module>tmpresearch</module>
                <module>chat-app</module>
                <module>utilities</module>
                <module>bigdata</module>
				<module>socialnet</module>
            </modules>
        </profile>

        <!-- Production profile, inactive by default. -->
        <profile>
            <id>env-prod-all</id>
            <properties>
                <env>prod</env>
                <prod.build.phase>package</prod.build.phase>
            </properties>
            <!-- All modules to build -->
            <modules>
                <module>storm</module>
                <module>marklogic</module>
                <module>tmpresearch</module>
                <module>chat-app</module>
                <module>utilities</module>
                <module>bigdata</module>
				<module>socialnet</module>
            </modules>
        </profile>

        <!-- Simple build profile - quick build for project, skips some of modules. It's a dev profile. -->
        <profile>
            <id>env-dev-simple</id>
            <properties>
                <env>dev</env>
                <prod.build.phase>none</prod.build.phase>
            </properties>
            <!-- Some of modules to build -->
            <modules>
                <module>bigdata</module>
				<module>socialnet</module>
            </modules>
        </profile>

    </profiles>

</project>