<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>dgusev</groupId>
    <artifactId>research</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>
    <name>Research :: Java/Python/Shell research/survey, self-education application.</name>

    <properties>
        <java.sources.encoding>UTF-8</java.sources.encoding>
        <java.version>1.8</java.version>
        <maven.compiler.plugin>2.3.2</maven.compiler.plugin>
        <maven.jar.plugin>2.4</maven.jar.plugin>
        <maven.resources.plugin>2.5</maven.resources.plugin>
		<!-- Apache Commons Lang3 version -->
        <commons.lang3.version>3.4</commons.lang3.version>
		<!-- Apache commons logging version -->
        <commons.logging.version>1.1.3</commons.logging.version>
		<!-- Apache Log4j logging version -->
        <log4j.version>1.2.16</log4j.version>
		<!-- JUnit version -->
		<junit.version>4.12</junit.version>
		<!-- Javax Mail version -->
		<java.mail.version>1.4.5</java.mail.version>
		<!-- Spring framework [context] module version -->
		<spring.context.version>4.3.3.RELEASE</spring.context.version>
        <apache.httpclient.version>4.5.2</apache.httpclient.version>
    </properties>

    <build>

        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>${java.sources.encoding}</encoding>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${maven.resources.plugin}</version>
                <configuration>
                    <encoding>${java.sources.encoding}</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
    </dependencies>

    <profiles>

        <!-- Development profile, active by default. -->
        <profile>
            <id>env-dev-all</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <env>dev</env>
            </properties>
            <!-- All modules to build -->
            <modules>
                <module>storm</module>
                <module>marklogic</module>
                <module>tmpresearch</module>
                <module>chat-app</module>
                <module>utilities</module>
                <module>bigdata</module>
				<module>socialnet</module>
            </modules>
        </profile>

        <!-- Production profile, inactive by default. -->
        <profile>
            <id>env-prod-all</id>
            <properties>
                <env>prod</env>
            </properties>
            <!-- All modules to build -->
            <modules>
                <module>storm</module>
                <module>marklogic</module>
                <module>tmpresearch</module>
                <module>chat-app</module>
                <module>utilities</module>
                <module>bigdata</module>
				<module>socialnet</module>
            </modules>
        </profile>

        <!-- Simple build profile - quick build for project, skips some of modules. It's a dev profile. -->
        <profile>
            <id>env-dev-simple</id>
            <properties>
                <env>dev</env>
            </properties>
            <!-- Some of modules to build -->
            <modules>
                <module>bigdata</module>
				<module>socialnet</module>
            </modules>
        </profile>

    </profiles>

</project>