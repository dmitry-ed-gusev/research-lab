    <modelVersion>4.0.0</modelVersion>
    <artifactId>scripts</artifactId>
    <!--<packaging>jar</packaging>-->
    <version>1.0</version>
    <name>Scripts :: some shell/python scripts.</name>

    <properties>
        <skipPythonTests>true</skipPythonTests>
        <skipPythonCoverage>true</skipPythonCoverage>
        <skipScriptRun>false</skipScriptRun>
    </properties>

    <build>

        <sourceDirectory>scripts</sourceDirectory>

        <plugins>
            <!-- run python unit tests -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${maven.plugin.exec}</version>
                <configuration>
                    <workingDirectory>${project.basedir}</workingDirectory>
                </configuration>
                <executions>
                    <!-- run python unit tests -->
                    <execution>
                        <id>PyUnit-Run</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <skip>${skipPythonTests}</skip>
                            <executable>python</executable>
                            <arguments>
                                <argument>-m</argument>
                                <argument>unittest</argument>
                                <argument>discover</argument>
                                <!--<argument>-s./scripts/pytests</argument>-->
                                <argument>-v</argument>
                            </arguments>
                            <environmentVariables>
                                <!-- python path for dependencies -->
                                <!--<PYTHONPATH>${project.basedir}/target/dependency${path.separator}${project.basedir}/target/dependency/pymocks</PYTHONPATH>-->
                            </environmentVariables>
                        </configuration>
                    </execution>

                    <!-- run python unit tests and gather coverage report -->
                    <execution>
                        <id>PyUnit-Run-Coverage</id>
                        <phase>test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <skip>${skipPythonCoverage}</skip>
                            <executable>python</executable>
                            <arguments>
                                <argument>-m</argument>
                                <argument>unittest</argument>
                                <argument>discover</argument>
                                <!--<argument>-s./scripts/pytests</argument>-->
                                <argument>-v</argument>
                            </arguments>
                            <environmentVariables>
                                <!-- python path for dependencies -->
                                <!--<PYTHONPATH>${project.basedir}/target/dependency${path.separator}${project.basedir}/target/dependency/pymocks</PYTHONPATH>-->
                            </environmentVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
